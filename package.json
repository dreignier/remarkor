{
	"name": "remarkor",
	"version": "1.0.0",
	"scripts": {
		"lint": "eslint",
		"build": "tsc && npm run copyfiles && npm run sass",
		"copyfiles": "copyfiles -u 1 src/assets/template.html dist/ && copyfiles -u 1 src/assets/static/* dist/",
		"sass": "sass src/assets/style.scss dist/assets/static/style.css && sass src/assets/themes:dist/assets/themes",
		"start": "node dist/index.js",
		"watch": "node dist/index.js --watch"
	},
	"lint-staged": {
		"src/**/*.{ts,tsx}": [
			"npm run lint"
		]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dreignier/remarkor.git"
	},
	"author": "dreignier",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/dreignier/remarkor/issues"
	},
	"homepage": "https://github.com/dreignier/remarkor#readme",
	"description": "",
	"dependencies": {
		"commander": "^13.1.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.20.0",
		"@types/commander": "^2.12.0",
		"@types/node": "^22.13.1",
		"copyfiles": "^2.4.1",
		"eslint": "^9.20.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-prettier": "^5.2.3",
		"globals": "^15.14.0",
		"lint-staged": "^15.4.3",
		"prettier": "^3.5.0",
		"sass": "^1.85.0",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.24.0"
	}
}
